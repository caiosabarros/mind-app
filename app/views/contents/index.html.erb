<h1>Your Contents</h1>
<%= link_to "New Content", new_content_path %>
</br>
</br>
<%=form_tag(contents_path, method: :get) do %>
  <div class="mb-3">
  <%= label_tag :tags %>
  <%= select_tag :tags, options_for_select(current_user.tags.pluck(:name)), class: 'select2',  multiple: 'multiple', style: 'width: 50%'%>
  </div>

  <div class="actions">
    <%= submit_tag('Search',  class: "btn btn-primary") %>
  </div>
<%end%>
</br>
</br>

<% @contents.each do |content|%>
  <%= link_to 'Edit', edit_content_path(content) %>
  <%= link_to 'Show', content_path(content) %>
  <%= link_to 'Delete', content_path(content), method: :delete, data: {confirm: "ARE YOU SURE?"} %>
  <strong>Title:</strong><%= content.title %>
  <strong>Description:</strong><%= content.description %>
  <strong>Tags:</strong><%= content.tags.pluck(:name).join(', ') %>
  
  </br>
<% end %>  